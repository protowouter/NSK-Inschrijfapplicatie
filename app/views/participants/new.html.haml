%div.span5

  %h2 Registreren



  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

    = f.label :naam
    = f.text_field :name
    
    = f.label :email 
    = f.text_field :email
    
    = f.label :birthdate
    = date_select :birthdate, :start_year => 1900
    
    = f.label :sex
    = f.collection_select(:sex_id, Sex.all, :id, :name)
    
    = f.label :college
    = f.collection_select(:college_id, College.all, :id, :name)
    
    = f.label :club
    = f.collection_select(:club_id, Club.all, :id, :name)
    
    = f.label :study
    = f.text_field :study
    
    = f.label :licensenumber
    = f.text_field :licensenumber

    = f.label :wachtwoord
    = f.password_field :password

    = f.label :wachtwoord_bevestiging
    = f.password_field :password_confirmation 
    
    %div.submit_field

      = f.submit "Registreer", :class => :button


  = render :partial => "devise/links"