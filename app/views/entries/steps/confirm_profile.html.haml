%h2 Controleer a.u.b. je gegevens

%ul
  %li 
    Naam:
    = @participant.name
  %li
    Geslacht:
    = @participant.sex.name
  %li
    Email:
    = @participant.email
  %li
    Onderwijsinstelling:
    = @participant.college.name
  %li
    Vereniging:
    = @participant.club.name
  %li
    Studie:
    = @participant.study
  %li
    Licentienummber:
    = @participant.licensenumber
    
= form_for @entry, :url => wizard_path, :validate => true do |f|
  .navigation
    = link_to 'Deze gegevens kloppen niet', edit_registration_path(@participant), :class => "btn btn-warning"
    = f.submit :class => :btn, :value => :Volgende
