= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h2 Inloggen
  = f.email_field :email, :class => "input-block-level", :placeholder => "Email adres"

  = f.password_field :password, :class => "input-block-level", :placeholder => "Wachtwoord"
  - if devise_mapping.rememberable?
    %label.checkbox
      = f.check_box :remember_me
      Onthoud mij

  %div.submit_field
    = f.submit "Inloggen", :class => "btn btn-large"
    of
    = link_to "Verbind met Facebook", "/auth/facebook", :class => "btn btn-primary"


= render "links"